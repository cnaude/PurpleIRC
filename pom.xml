        </repository>
       
        <repository>
            <id>comphenix-rep</id>
            <name>Comphenix Repository</name>
            <url>http://repo.comphenix.net/content/groups/public</url>
        </repository>
	
	<repository>
	    <id>ess-repo</id>
	    <url>http://repo.ess3.net/content/groups/essentials</url>
	</repository>

        <!-- Vault -->
        <repository>
            <id>vault-repo</id>
            <url>http://ci.herocraftonline.com/plugin/repository/everything/</url>
        </repository>
        
        <repository>
    	    <id>sk89</id>
    	    <url>http://maven.sk89q.com/repo/</url>
    	</repository>
    	
    	<repository>
    	    <id>craftminecraft-dev</id>
    	    <url>http://repo.craftminecraft.net/content/groups/public/</url>
    	</repository>
    	
    	<repository>
    	    <id>regularbox-rep</id>
    	    <url>http://repo.regularbox.com/artifactory/repo</url>
    	</repository>
    
        <!-- For anything else without its own repo
        <repository>
            <id>cnaude-repo</id>
            <url>http://cnaude.freeshell.org/maven/repo/releases/</url>
        </repository> -->
